<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.john.studentrecordrequest.Profile"
    android:background="@drawable/back"
    android:orientation="vertical">

    <TextView
        android:text="User Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:fontFamily="casual"
        android:textStyle="normal|italic"
        android:typeface="monospace"
        android:layout_marginBottom="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/completename"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:text="Jacqueline Timbal Escabusa"
        android:textColor="@android:color/black"
        android:fontFamily="casual"
        android:textStyle="normal|italic"
        android:typeface="monospace"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Username:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                android:textStyle="normal|italic"
                android:typeface="monospace"/>

            <TextView
                android:text="0513-3467"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uname"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                android:textStyle="normal|italic"
                android:typeface="monospace"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Password:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                android:textStyle="normal|italic"
                android:typeface="monospace"/>

            <TextView
                android:text="30101997"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upass"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                android:textStyle="normal|italic"
                android:typeface="monospace"/>

            <Button
                android:text="Change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uchange1"
                android:background="@drawable/button_bg_rounded_corners"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:fontFamily="casual"
                android:textStyle="normal|bold|italic"
                android:typeface="monospace"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Email:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                android:textStyle="normal|italic"
                android:typeface="monospace"/>

            <TextView
                android:text="jacqueescabusa@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uemail"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                android:textStyle="normal|italic"
                android:typeface="monospace"/>

            <Button
                android:text="Change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uchange2"
                android:background="@drawable/button_bg_rounded_corners"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:fontFamily="casual"
                android:textStyle="normal|bold|italic"
                android:typeface="monospace"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Status:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                android:textStyle="normal|italic"
                android:typeface="monospace"/>

            <TextView
                android:text="Student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ustatus"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                android:textStyle="normal|italic"
                android:typeface="monospace"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
